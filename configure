#!/bin/sh
#

inpath()
{
    IFS=:
    for d in $PATH
    do
        if [ -x $d/$1 ]; then
            return 0
        fi
    done
    return 1
}

if ( inpath bash ); then
    for p in python3 python2
    do
        if ( inpath $p ); then
            exec $p `dirname $0`/make/configure.py "$@"
            exit 0
        else
            echo "ERROR: no suitable version of python found."
        fi
    done
else
    echo "ERROR: bash shell not found."
fi

exit 1
